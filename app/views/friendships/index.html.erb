<div class="dashboard_container">
  <h1>Your friendships</h1>

  <h4>Received request</h4>
  <div class="received">
      <% if @received_requests %>
        <% @received_requests.each do |request| %>
        <div class="received_avatar">
          <%= cl_image_tag request.asker.avatar.key, height: 75, width: 75, crop: :fill, class: "rounded-circle" %>
        </div>
        <div class="asker_nickname_buttons">
          <%= link_to request.asker.nickname %>
          <%= link_to "accept",  accept_friendship_path(request), method: :put, class: "btn btn-flat" %>
          <%= link_to "deny",  decline_friendship_path(request), method: :put, class: "btn btn-flat" %>
        </div>
        <% end %>
      <% end %>
  </div>

  <h4>Pending request</h4>
  <div class="pending">
    <div class="pending_requests">
      <% if @pending_requests %>
        <% @pending_requests.each do |request| %>
          <%= cl_image_tag request.receiver.avatar.key, height: 75, width: 75, crop: :fill, class: "rounded-circle" %>
          <%= link_to request.receiver.nickname, user_path(request.receiver) %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
