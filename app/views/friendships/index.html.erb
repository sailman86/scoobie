<h1>Those are all of your friends.</h1>

<h2>Received request</h2>
<% if @received_requests %>
  <% @received_requests.each do |request| %>
    <%= request.asker.avatar.key %>
    <%= request.asker.nickname %>
    <%= link_to "accept",  accept_friendship_path(request), method: :put %>
    <%= link_to "deny",  decline_friendship_path(request), method: :put %>
  <% end %>
<% end %>

<h2>Pending request</h2>
<% if @pending_requests %>
  <% @pending_requests.each do |request| %>
    <%= request.receiver.avatar.key %>
    <%= request.receiver.nickname %>
  <% end %>
<% end %>
