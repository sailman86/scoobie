<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.pexels.com/photos/4197483/pexels-photo-4197483.jpeg?auto=compress&cs=tinysrgb&dpr=3&h=750&w=1260);">
  <div class="container">
    <h1>Don't be shy, add a photo!</h1>
    <% if policy(@user).add_photo? %>
      <%=simple_form_for @user, method: :patch do |f| %>
      <div class="d-flex">
        <%= f.input :photos, as: :file, input_html: { multiple: true, class: "custom-button" }, label: false  %>
        <%= f.submit 'Upload', class: "btn btn-photo" %>
      </div>
      <% end %>
    <% end  %>
  </div>
</div>
