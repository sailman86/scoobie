<div class="container">
    <!-- User name -->
  <h1><%= @user.first_name %>' profile page</h1>
  <!-- User Avatar -- need to implement bootstrap! -->
  <% if @user.avatar.attached?  %>
    <%= cl_image_tag @user.avatar.key, height: 40, width: 40, crop: :fill %>
  <% end %>

<%= link_to 'message', 'http://localhost:3000/chatrooms/1', class: "btn btn-primary" %>


  <p>I'm <%= @user.bio %></p>

  <button><%= link_to "Message me", "http://www.scoobie.xyz/chatrooms/2", class: "btn btn-primary" %></button>


  <!-- Pet Info -- need to implement bootstrap! -->
  <% @dogs.each do |dog| %>
    <h3><%= dog.name.capitalize %></h3>
    <% if dog.photo.attached?  %>
      <%= cl_image_tag dog.photo.key, height: 50, width: 50, crop: :fill %>
    <% end %>
    <p>Gender:<%= dog.gender %></p>
    <p>Years: <%= dog.age %></p>
    <p>Breed: <%= dog.breed %></p>
    <p><%= dog.bio %></p>
  <% if policy(dog).destroy? %>
          <li><%= link_to "Delete #{dog.name}", dog_path(dog), method: :delete, data: { confirm: "Are you sure?" } %></li>
        <% end %>
        <% if policy(dog).edit? %>
          <li><%= link_to "Edit #{dog.name}", edit_dog_path(dog) %></li>
        <% end %>
  <% end %>

  <!-- Form to upload photos -- need to implement bootstrap!!-->
  <% if policy(@user).add_photo? %>
    <%=simple_form_for @user, url: add_photo_user_path(@user), method: :patch do |f| %>
      <%= f.input :photos, as: :file, input_html: { multiple: true }  %>
      <%= f.button :submit, class: "btn-chatroom" %>
    <%end %>
  <% end  %>

  <!-- Gallery of photos -- need to implement bootstrap!! -->
  <% if @user.photos.attached?  %>
    <% @user.photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
  <% end %>
</div>
